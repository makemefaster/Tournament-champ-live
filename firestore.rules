rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Tournaments collection
    match /tournaments/{tournamentId} {
      // Anyone can read published tournaments
      allow read: if resource.data.status == 'live' || resource.data.status == 'completed' || isAuthenticated();
      // Only authenticated admins can create/update/delete
      allow create, update, delete: if isAuthenticated();
    }
    
    // Matches collection - supports sortOrder for push-back logic
    match /matches/{matchId} {
      // Anyone can read matches
      allow read: if true;
      // Only authenticated users can write
      allow create, update, delete: if isAuthenticated();
      
      // Validate required fields
      allow create: if request.resource.data.keys().hasAll([
        'tournamentId', 
        'homeTeam', 
        'awayTeam', 
        'scheduledTime', 
        'sortOrder',
        'status'
      ]);
      
      // Ensure sortOrder is a number for push-back functionality
      allow update: if request.resource.data.sortOrder is number;
    }
    
    // Teams collection
    match /teams/{teamId} {
      // Anyone can read teams
      allow read: if true;
      // Only authenticated users can write
      allow create, update, delete: if isAuthenticated();
      
      // Validate team structure
      allow create: if request.resource.data.keys().hasAll([
        'tournamentId',
        'name',
        'points',
        'goalsScored',
        'goalsAgainst',
        'goalDifference',
        'played',
        'won',
        'drawn',
        'lost'
      ]);
    }
    
    // Scores/Results collection (optional, for detailed match events)
    match /scores/{scoreId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Admin users collection
    match /admins/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // Admins should be managed through Firebase Console
    }
    
    // Configuration collection (sport types, templates, etc.)
    match /config/{configId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
